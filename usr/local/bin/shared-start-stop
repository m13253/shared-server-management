#!/bin/bash

if [ "$#" != "1" ]
then
    echo "Usage: $0 [start|stop|restart]"
    echo
    echo "This file is a part of shared-server-management, released under GPL 3.0."
    exit
fi
if [ "$(id -u)" != "0" ]
then
    echo "Run this as root." >&2
    exit 1
fi
case "$1" in
    restart)
        "$0" stop
        exec "$0" start
        ;;
    start|stop)
        for i in /home/*
        do
            if [ -d "$i" ]
            then
                bash "$0-helper" "$1" "$i" &
            fi
        done
        wait
        ;;
    *)
        exec "$0"
        ;;
esac
